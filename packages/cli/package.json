{
  "name": "@local-labs-jpollock/local-cli",
  "version": "0.0.5",
  "description": "Command-line interface for Local WordPress development",
  "main": "lib/index.js",
  "bin": {
    "lwp": "./bin/lwp.js"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf lib",
    "lint": "eslint src --ext .ts --max-warnings=0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config e2e/jest.config.js",
    "test:all": "npm run test && npm run test:e2e"
  },
  "keywords": [
    "local",
    "cli",
    "wordpress",
    "development",
    "wp-cli"
  ],
  "author": "Jeremy Pollock <jpollock911@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jpollock/local-addon-cli.git",
    "directory": "packages/cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "lib/",
    "bin/",
    "addon-dist/",
    "skill/",
    "README.md"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "babel-jest": "^30.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "msw": "^2.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.2.5",
    "typescript": "^5.0.0"
  }
}
