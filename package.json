{
  "name": "@local-labs-jpollock/local-addon-cli",
  "version": "0.0.1",
  "private": true,
  "description": "Command-line interface for Local WordPress development",
  "workspaces": [
    "packages/addon",
    "packages/cli"
  ],
  "scripts": {
    "build": "npm run build:addon && npm run bundle:addon && npm run build:cli",
    "build:addon": "npm run build -w packages/addon",
    "build:cli": "npm run build -w packages/cli",
    "bundle:addon": "node scripts/bundle-addon.js",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:addon": "npm run test -w packages/addon",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf packages/cli/addon-dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/getflywheel/local-addon-cli.git"
  },
  "author": "Jeremy Pollock <jpollock911@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
