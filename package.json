{
  "name": "@local-labs/local-addon-cli-mcp",
  "version": "0.1.0",
  "private": true,
  "description": "Command-line interface and AI tool integration for Local",
  "workspaces": [
    "packages/addon",
    "packages/cli"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:addon": "npm run build -w packages/addon",
    "build:cli": "npm run build -w packages/cli",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:addon": "npm run test -w packages/addon",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/local-labs/local-addon-cli-mcp.git"
  },
  "author": "Jeremy Pollock <jpollock911@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
